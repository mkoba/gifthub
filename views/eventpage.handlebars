<!doctype html>
<html>
<head>
	<title>GiftHub: Event</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/gifthub.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<form>	
		<button type="button" class="backButton" onClick="location.href='/home'">
		</button>
	</form>
	<div class="screen">
		<h1 class="headerbox">{{title}}</h1>
		<h5>{{date}}</h5>
		<h7>{{description}}</h7>

		<hr>
		{{#each idea}}
			<div class="idea">
				<img src="{{image}}" class="image">
				<form action="/idea">
					<button type="submit" class="submitButton">{{name}}</button>
				</form>
				<hr>
			</div>
		{{/each}}

		<br>
		<form action="/submitidea">
				<button type="submit" class="submitButton">Submit Idea</button>
		</form>
	</div>
</body>
</html>
